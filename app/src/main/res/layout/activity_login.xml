<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/login_icon"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/swanky_logo_2"
        tools:layout_height="150dp"
        tools:layout_width="wrap_content" />

    <EditText
        android:id="@+id/login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/inputs"
        android:drawableLeft="@drawable/ic_mail"
        android:ems="10"
        android:hint="  EMail"
        android:inputType="textEmailAddress"
        android:padding="10dp" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/inputs"
        android:drawableLeft="@drawable/ic_password1"
        android:ems="10"
        android:hint="  Password"
        android:inputType="textPassword"
        android:padding="10dp" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:background="@drawable/button"
        android:padding="15dp"
        android:text="Login" />

    <TextView
        android:id="@+id/login_text_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="310dp"
        android:text="Sign Up" />

    <TextView
        android:id="@+id/login_Text_loginwith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="383dp"
        android:text="Login With" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/login_Text_loginwith"
        >

        <ImageView
            android:id="@+id/login_facebook_button"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"></ImageView>
            //app:srcCompat="@drawable/pp" />

        <ImageView
            android:id="@+id/login_twitter_button"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"></ImageView>
            //app:srcCompat="@drawable/pp" />

        <ImageView
            android:id="@+id/login_google_button"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"></ImageView>
            //app:srcCompat="@drawable/pp" />



    </LinearLayout>
</RelativeLayout>